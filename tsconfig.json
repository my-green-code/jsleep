{
	"compilerOptions": {
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2015", "dom"],
		"types": ["node"]
	},
	"include": ["src", "fix-imports.js"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
